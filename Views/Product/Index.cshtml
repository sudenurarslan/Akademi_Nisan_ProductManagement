@model List<ProductManagement.Models.Product>

<h2>Ürün Listesi</h2>
<p><a href="/Product/Create">Yeni Ürün Ekle</a></p>
<table>
    <thead>
    <tr><th>Ad</th><th>Fiyat</th><th>Açıklama</th><th>İşlem</th></tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price ₺</td>
            <td>@item.Description</td>
            <td>
                <a href="/Product/Details/@item.Id">Detay</a> |
                <a href="/Product/Edit/@item.Id">Düzenle</a> |
                <a href="/Product/Delete/@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>
